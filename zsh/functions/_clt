#compdef clt

_clt()
{
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments \
        '1: :->command'\
        '2: :->hcommand'

    case $state in
    command)
        _arguments "1:Op:((cd\:'cd into cltaxis dir'
                           conf\:'run ./configure'
                           make\:'run make in cltaxis dir'
                           cl\:'run make clean in cltaxis dir'
                           clean\:'rune make clean && make distclean in clt dir'
                           push\:'push changes to svn'
                           spush\:'push changes to svn, stashing non commited changes'
                           upver\:'increment version tag'
                           help\:'display help about a command'))"
        ;;
    hcommand)
        case "$words[2]" in
            "help")
                compadd "$@" cd conf make cl clean push spush upver help
                ;;
            *)
                ;;
        esac
    esac
}

