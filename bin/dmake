#!/bin/bash

DIGIKAM_BUILD_DIR="$HOME/dev/digikam-sc/build"
MAKE="make -j4"
MAKE_INSTALL="sudo $MAKE install"
CMAKE="cmake -DCMAKE_BUILD_TYPE=debugfull -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` .."

if [[ "$#" == "0" ]]; then
	cd $DIGIKAM_BUILD_DIR && $MAKE
else
	case "$1" in
		"install")
			cd $DIGIKAM_BUILD_DIR && $MAKE_INSTALL;;
		"cmake")
			cd $DIGIKAM_BUILD_DIR && $CMAKE;;
		*)
			echo "I don't know what to do!"
	esac
		
	
fi

